{
    "version": 2,
    "builds": [
      {
        "src": "YoniGuestHouseBackend/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "Dockerfile",
        "use": "@vercel/docker"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },  
      {
        "src": "/(.*)",
        "dest": "YoniGuestHouseBackend/wsgi.py"
      }
    ],
    "outputDirectory": "staticfiles"
  }
